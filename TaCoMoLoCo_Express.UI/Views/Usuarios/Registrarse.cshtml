@model TaCoMoLoCo_Express.Model.Login
@{
    Layout = null;
}


@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}
<!DOCTYPE html>
<html>
<head>
    <title>Loguearse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <script src="https://kit.fontawesome.com/3bbe632e6f.js" crossorigin="anonymous"></script>

</head>
<body>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <div>
                    <h1 class="fw-bold mb>-5">Iniciar Sesión</h1>
                </div>
                <form asp-action="Registrarse" method="post">
                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="form1Example13" class="form-control form-control-lg" required asp-for="Usuario"/>
                        <label class="form-label" for="form1Example13">Nombre de Usuario</label>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                            <input type="password" id="form1Example23" class="form-control form-control-lg" required asp-for="Contrasena" />
                        <label class="form-label" for="form1Example23">Contraseña</label>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">

                            <a href="@Url.Action("RegistrarNuevoUsuario", "Usuarios")">¿No tiene Cuenta? Regístrese Acá</a>-
                            
                    </div>

                    <!-- Submit button -->
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>

                </form>
            </div>
        </div>
    </div>
</section>
</body>
</html>